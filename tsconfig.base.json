{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@getlarge/base-client-wrapper": [
        "packages/base-client-wrapper/src/index.ts"
      ],
      "@getlarge/keto-client-wrapper": [
        "packages/keto-client-wrapper/src/index.ts"
      ],
      "@getlarge/keto-relations-parser": [
        "packages/keto-relations-parser/src/index.ts"
      ],
      "@getlarge/kratos-client-wrapper": [
        "packages/kratos-client-wrapper/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
